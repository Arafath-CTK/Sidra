<style>
 /* Styles for the select container */
.niceselect_option {
  position: relative;
}

/* Styles for the select element */
.sortSelection select {
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  width: 100%;
  padding: 8px; /* Adjusted padding */
  border: 1px solid #ccc;
  border-radius: 5px;
  background-color: #fff;
  cursor: pointer;
  font-size: 14px; /* Adjusted font size */
  outline: none;
}

/* Styles for the select arrow */
.sortSelection::after {
  content: '\25BE'; /* Unicode character for down arrow */
  position: absolute;
  top: 50%;
  right: 6px; /* Adjusted position */
  transform: translateY(-50%);
  pointer-events: none;
}

/* Styles for select options */
.sortSelection select option {
  background-color: #fff;
  color: #333;
  font-size: 14px; /* Adjusted font size */
}

/* Hover styles for select options */
.sortSelection select option:hover {
  background-color: #f0f0f0;
}

</style>

<!--shop  area start-->
<div class="shop_area mt-100 mb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-12">
                <!--sidebar widget start-->
                <aside class="sidebar_widget">
                    <div class="widget_inner">

                        <div class="widget_list widget_categories">
                            <h3 style="margin-bottom: 10px;">Categories</h3>
                            <ul class="main_categories" style="list-style-type: none; padding: 0;">
                                <li style="margin-bottom: 5px; cursor: pointer;"><input type="checkbox"
                                        name="category_plants" value="plants">
                                    Plants</li>
                                <li style="margin-bottom: 5px; cursor: pointer;"><input type="checkbox"
                                        name="category_pots" value="pots">
                                    Containers</li>
                                <li style="margin-bottom: 5px; cursor: pointer;"><input type="checkbox"
                                        name="category_supplies" value="supplies">
                                    Gardening Supplies</li>
                            </ul>
                            <h3 style="margin-top: 20px; margin-bottom: 10px;">Sub categories</h3>
                            <ul class="sub_categories" style="list-style-type: none; padding: 0;">
                                <li style="margin-bottom: 5px; cursor: pointer;"><input type="checkbox"
                                        name="subcategory_plants" value="indoor"> Indoor</li>
                                <li style="margin-bottom: 5px; cursor: pointer;"><input type="checkbox"
                                        name="subcategory_plants" value="outdoor"> Outdoor</li>
                                <li style="margin-bottom: 5px; cursor: pointer;"><input type="checkbox"
                                        name="subcategory_plants" value="flowering"> Flowering</li>
                                <li style="margin-bottom: 5px; cursor: pointer;"><input type="checkbox"
                                        name="subcategory_pots" value="ceramic"> Ceramic</li>
                                <li style="margin-bottom: 5px; cursor: pointer;"><input type="checkbox"
                                        name="subcategory_pots" value="plastic"> Plastic</li>
                                <li style="margin-bottom: 5px; cursor: pointer;"><input type="checkbox"
                                        name="subcategory_pots" value="clay">
                                    Clay</li>
                                <li style="margin-bottom: 5px; cursor: pointer;"><input type="checkbox"
                                        name="subcategory_supplies" value="fertilizers"> Fertilizers</li>
                                <li style="margin-bottom: 5px; cursor: pointer;"><input type="checkbox"
                                        name="subcategory_supplies" value="tools">
                                    Tools</li>
                                <li style="margin-bottom: 5px; cursor: pointer;"><input type="checkbox"
                                        name="subcategory_supplies" value="accessories"> Accessories</li>
                            </ul>
                        </div>

                        <div class="widget_list widget_filter">
                            <h3>Filter by price</h3>
                            <form action="#">
                                <div id="slider-range"></div>
                                <input style="margin-right: 5px; width:fit-content" type="text" name="text"
                                    id="amount" />
                            </form>
                        </div>

                        <button id="applyFilterBtn" type="button"
                            style="display: block; width: 100%; padding: 12px; margin-top: 20px; font-size: 1rem; color: #fff; background-color: #79a206; border: none; border-radius: 4px; cursor: pointer;">Apply
                            Filter</button>
                    </div>
                </aside>
                <!--sidebar widget end-->
            </div>
            <div class="col-lg-9 col-md-12">
                <!--shop wrapper start-->
                <!--shop toolbar start-->
                <div class="shop_toolbar_wrapper">
                    <div class="shop_toolbar_btn">
                        <button data-role="grid_3" type="button" class=" btn-grid-3" data-bs-toggle="tooltip"
                            title="3"></button>

                        <button data-role="grid_4" type="button" class="active btn-grid-4" data-bs-toggle="tooltip"
                            title="4"></button>
                    </div>

                    <div class="niceselect_option" style="margin-right: 10px !important;">
                        <div class="sortSelection">
                            <select name="orderby" id="sort">
                                <option value="name">Product name</option>
                                <option value="latest">Latest first</option>
                                <option value="lowtohigh">Price: low to high</option>
                                <option value="hightolow">Price: high to low</option>
                                {{!-- <option value="rating">Average rating</option> --}}
                            </select>
                        </div>
                    </div>

                </div>
                <!--shop toolbar end-->
                <div class="row shop_wrapper grid_4">
                    {{#each products}}
                    <div class="col-lg-3 col-md-4 col-6 ">
                        <article class="single_product">
                            <figure>
                                <input type="hidden" id="productId" name="productId" value="{{this._id}}">

                                <div class="product_thumb">
                                    <a class="primary_img" href="/singleProduct/{{this._id}}"><img
                                            src="{{this.images.[0]}}" alt=""></a>
                                    {{!-- <div class="label_product">
                                        <span class="label_sale">-7%</span>
                                    </div> --}}
                                    <div class="action_links">
                                        <ul>
                                            <li class="wishlistAdd"><a><i onclick="addToWishlist(this, `{{this._id}}`)"
                                                        class="fa-regular fa-heart"></i></a></li>
                                            <li class="wishlistRemove d-none"><a><i
                                                        onclick="removeFromWishlist(this, `{{this._id}}`)"
                                                        class="fa-solid fa-heart" style="color: #79a206;"></i></a></li>
                                        </ul>
                                    </div>

                                </div>
                                <div class="product_content grid_content">
                                    <div class="product_price_rating">
                                        <div class="product_rating">
                                            <ul>
                                                <li><a href="#"><i class="icon-star"></i></a>
                                                </li>
                                                <li><a href="#"><i class="icon-star"></i></a>
                                                </li>
                                                <li><a href="#"><i class="icon-star"></i></a>
                                                </li>
                                                <li><a href="#"><i class="icon-star"></i></a>
                                                </li>
                                                <li><a href="#"><i class="icon-star"></i></a>
                                                </li>
                                            </ul>
                                        </div>
                                        <h4 class="product_name"><a href="/singleProduct/{{this._id}}">{{this.name}}</a>
                                        </h4>
                                        <div class="price_box">
                                            <span class="current_price">&#x20B9; {{this.price}}</span>
                                            {{!-- <span class="old_price">Â£74.00</span> --}}
                                        </div>
                                    </div>
                                </div>

                            </figure>
                        </article>
                    </div>
                    {{/each}}
                </div>

                <div class="shop_toolbar t_bottom">
                    <!-- Pagination HTML -->
                    <div class="pagination">
                        <ul>
                            <li class="{{#if disablePrev}}d-none{{/if}}">
                                <a href="?page={{currentPageMinusOne}}">Prev</a>
                            </li>
                            {{#each pages}}
                            <li class="{{#if isCurrent}}current{{/if}}">
                                <a href="?page={{pageNumber}}">{{pageNumber}}</a>
                            </li>
                            {{/each}}
                            <li class="{{#if disableNext}}d-none{{/if}}">
                                <a href="?page={{currentPagePlusOne}}">Next</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!--shop toolbar end-->
                <!--shop wrapper end-->
            </div>
        </div>
    </div>
</div>
<!--shop  area end-->

<script src="/user/scripts/shop.js"></script>