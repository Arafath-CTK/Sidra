    <form id="addProduct" action="/admin/addProduct" method="POST" enctype="multipart/form-data"
      onsubmit="return validateForm()">
      <div class="row g-3 mb-3">
        <div class="col-xl-8 col-lg-8">
          <div class="sticky-lg-top card mb-3">
            <div class="card-header py-3 d-flex justify-content-between bg-transparent border-bottom-0">
              <h6 class="mb-0 fw-bold ">Product information</h6>
            </div>
            <div class="card-header py-0 d-flex justify-content-between bg-transparent border-bottom-0">
              <b><span class="text-danger text-uppercase" id="Errormessage">{{productAddError}}</span></b>
            </div>
            <div class="card-body">
              <div class="row g-3 align-items-center">
                <div class="col-md-12">
                  <label for="ProductName" class="form-label">Product Name</label>
                  <input type="text" id="productName" name="ProductName" placeholder="Product Name"
                    class="form-control">
                </div>
                <div class="col-md-6">
                  <label for="Price" class="form-label">Price</label>
                  <input name="Price" type="number" min="0" id="price" placeholder="Price" class="form-control">
                </div>
                <div class="col-md-6">
                  <label for="Stock" class="form-label">Stock Quantity</label>
                  <input type="number" min="0" name="Stock" id="stockQuantity" placeholder="Total Stocks"
                    class="form-control">
                </div>
                <div class="col-md-12">
                  <label for="Description" class="form-label col-12">Product Description</label>
                  <input name="Description" id="description" class="col-12 pb-3 form-control" type="text"
                    placeholder="Add Discription Here">
                </div>
              </div>
              <div class="card my-3">
                <div class="card-header py-3 d-flex justify-content-between bg-transparent border-bottom-0">
                  <h6 class="mb-0 fw-bold ">Images</h6>
                </div>
                <div class="card-body">
                  <div class="row col-12 g-1 align-items-center">

                    <div>
                      <div
                        style="display: flex; flex-direction: column; border-bottom: 1px solid #ccc; padding-bottom: 10px; margin-bottom: 10px;">
                        <div style="display: flex; align-items: flex-start; margin-bottom: 10px">
                          <img class="" style="max-height: 200px; max-width: 200px;">
                        </div>
                        <div style="display: flex; align-items: flex-end;">
                          <label class="form-label col-3" for="images">Product Images:</label>
                          <input class="col-9" type="file" id="images" name="image" multiple>
                        </div>
                      </div>
                    </div>


