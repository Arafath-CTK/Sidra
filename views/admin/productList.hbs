<!-- Body: Body -->
<div class="body d-flex py-3">
    <div class="container-xxl">
        <div class="row align-items-center">
            <div class="border-0 mb-3">
                <div
                    class="card-header py-3 no-bg bg-transparent d-flex align-items-center px-0 justify-content-between border-bottom flex-wrap">
                    <h3 class="fw-bold mb-0">Products</h3>
                    <a href="/admin/addProduct"><button type="button"
                            class="btn btn-primary btn-set-task py-2 px-5 text-uppercase">Add
                            Product</button></a>
                </div>
            </div>
        </div>
        <!-- Row end  -->
        <div class="row g-2 mb-3">
            <div class="col-md-12 col-lg-4 col-xl-4 col-xxl-3">
                <div class="card mb-3">
                    <div class="reset-block">
                        <div class="filter-title">
                            <h4 class="title">Reset-Filter : </h4>
                        </div>
                        <div class="filter-btn">
                            <a class="btn btn-primary" href="/admin/listProduct">Reset</a>
                        </div>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="categories">
                        <div class="filter-title">
                            <a class="title" data-bs-toggle="collapse" href="#category" role="button"
                                aria-expanded="true">Category</a>
                        </div>
                        <div class="collapse show" id="category">
                            <div class="filter-category">
                                <ul class="category-list">
                                    <li value="plants">
                                        <a href="#" data-bs-toggle="collapse" data-bs-target="#collapseOne"
                                            aria-expanded="false" class="collapsed">Plants</a>
                                        <ul id="collapseOne" class="sub-category collapse" data-parent="#category">
                                            <li value="indoor"><a
                                                    onclick="selectCategory('plants', 'indoor')">Indoor</a>
                                            </li>
                                            <li value="outdoor"><a
                                                    onclick="selectCategory('plants', 'outdoor')">Outdoor</a>
                                            </li>
                                            <li value="flowering"><a
                                                    onclick="selectCategory('plants', 'flowering')">Flowering</a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li value="pots">
                                        <a class="collapsed" href="#" data-bs-toggle="collapse"
                                            data-bs-target="#collapseTwo">Planters And Pots</a>
                                        <ul id="collapseTwo" class="sub-category collapse" data-parent="#category">
                                            <li value="clay"><a onclick="selectCategory('pots', 'clay')">Clay</a></li>
                                            <li value="plastic"><a
                                                    onclick="selectCategory('pots', 'plastic')">Plastic</a>
                                            </li>
                                            <li value="ceramic"><a
                                                    onclick="selectCategory('pots', 'ceramic')">Ceramic</a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li value="supplies">
                                        <a class="collapsed" data-bs-toggle="collapse"
                                            data-bs-target="#collapseThree">Gardening Supplies</a>
                                        <ul id="collapseThree" class="sub-category collapse" data-parent="#category">
                                            <li value="fertilizers"><a
                                                    onclick="selectCategory('supplies', 'fertilizers')">Fertilizers
                                                    And Pesticides</a>
                                            </li>
                                            <li value="tools"><a onclick="selectCategory('supplies', 'tools')">Planting
                                                    Tools</a>
                                            </li>
                                            <li value="accessories"><a
                                                    onclick="selectCategory('supplies', 'accessories')">Accessories</a>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12 col-lg-8 col-xl-8 col-xxl-9">
                <div class="body d-flex py-3">
                    <div class="container-xxl">
                        <div class="row g-3 mb-3">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-body">

                                        <table id="myDataTable" class="table-auto text-center ms-1 me-1 w-full"
                                            style="width: 100%;">
                                            <thead>
                                                <tr>
                                                    <th colspan="3" style="text-align: center;">
                                                        <b><span class="text-danger text-uppercase"
                                                                id="Errormessage">{{productListError}}</span></b>
                                                    </th>
                                                </tr>
                                                <tr>
                                                    <th style="text-align: center;">Product</th>
                                                    <th style="text-align: center;">Details</th>
                                                    <th style="text-align: center;">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each products}}
                                                <tr class="col-12 g-0">
                                                    <td class="col-4"
                                                        style="border-bottom: 1px solid #e0e0e0; padding: 10px 0;">
                                                        <img class="w120 rounded img-fluid mb-2"
                                                            src="{{this.images.[0]}}" alt="" />
                                                        <div class="ms-2"><b>{{this.name}}</b></div>
                                                    </td>
                                                    <td class="col-6"
                                                        style="border-bottom: 1px solid #e0e0e0; padding: 10px 0;">
                                                        <div class="mb-5" style="width: 250px;">
                                                            <p class="mb-1 mt-2"><b>Description :</b><br /><span
                                                                    class="text-primary">{{this.description}}</span></p>
                                                            <div class="mt-1"><b>Price: <span
                                                                        class="text-primary">{{this.price}}</span></b>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="col-2"
                                                        style="border-bottom: 1px solid #e0e0e0; padding: 10px 0;">
                                                        <div class="d-flex">
                                                            <button type="button" class="btn btn-outline-secondary me-2"
                                                                onclick="editProduct('{{this._id}}')">
                                                                <i class="icofont-edit text-success"></i>
                                                            </button>
                                                            <button type="button" class="btn btn-outline-secondary"
                                                                onclick="deleteProduct('{{this._id}}')">
                                                                <i class="icofont-ui-delete text-danger"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>



                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- Row end  -->
    </div>
</div>


<script src="/admin/scripts/productList.js"></script>